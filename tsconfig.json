{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",                                  
    "sourceMap": true,
    "lib": ["es6"],                                      

    /* Modules */
    "module": "nodenext",                               
    "rootDir": "src",                                   
    "resolveJsonModule": true,                      

    /* JavaScript Support */
    "allowJs": true,                                     
    "outDir": "build",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,  

    /* Type Checking */
    "strict": true,                                      
    "noImplicitAny": true,                               
    "skipLibCheck": true,                                 
  },
    "include": ["src/**/*"]
}
