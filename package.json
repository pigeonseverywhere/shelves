{
  "name": "shelves-cli",
  "version": "1.0.9",
  "description": "A command line book tracker to make your reading life easier",
  "main": "./build/index.js",
  "type": "module",
  "bin": {
    "shelves": "./build/index.js"
  },
  "scripts": {
    "test": "node test.js",
    "start:dev": "npx nodemon",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/index.js",
    "prepublishOnly": "npm run build"

  },
  "files": ["build","README.md", "package.json"],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/pigeonseverywhere/shelves.git"
  },
  "keywords": [
    "tracker",
    "book",
    "list",
    "reading",
    "cli",
    "productivity"
  ],
  "author": "Yunshu Dai",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pigeonseverywhere/shelves/issues"
  },
  "homepage": "https://github.com/pigeonseverywhere/shelves#readme",
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "cli-spinners": "^2.9.0",
    "commander": "^11.0.0",
    "figlet": "^1.6.0",
    "inquirer": "^9.2.10",
    "nanospinner": "^1.1.0",
    "prompts": "^2.4.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.0",
    "@types/node": "^20.4.9",
    "@types/prompts": "^2.4.4",
    "@types/sqlite3": "^3.1.8",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "pkg": {
    "targets": [
      "node14-linux-x64",
      "node14-macos-x64",
      "node14-win-x64"
    ],
    "outputPath": "release"
  }
}
